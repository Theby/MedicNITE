<%- model_class = Persona -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:idPersona) %></th>
      <th><%= model_class.human_attribute_name(:domicilioPersona) %></th>
      <th><%= model_class.human_attribute_name(:nombresPersona) %></th>
      <th><%= model_class.human_attribute_name(:apellidosPersona) %></th>
      <th><%= model_class.human_attribute_name(:fechaNacimientoPersona) %></th>
      <th><%= model_class.human_attribute_name(:rutPersona) %></th>
      <!--<th><%#= model_class.human_attribute_name(:created_at) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= link_to persona.id, persona_path(persona) %></td>
        <td><%= persona.idPersona %></td>
        <td><%= persona.domicilioPersona %></td>
        <td><%= persona.nombresPersona %></td>
        <td><%= persona.apellidosPersona %></td>
        <td><%= persona.fechaNacimientoPersona %></td>
        <td><%= persona.rutPersona %></td>
        <!--<td><%#= persona.created_at %></td> -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_persona_path(persona), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      persona_path(persona),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_persona_path,
            :class => 'btn btn-primary' %>
