<div class="panel panel-default">
  <div class="panel-heading">
    <ol class="breadcrumb">
    <li><a href="/"><h4>Panel de control</h4></a></li> 
    <li class="active"><h4>/ Administración de Personas</h4></li>
  </div>
  <div class="panel-body">

<div class="accordion" id="accordion2">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
        <h4><b>Administrar Pacientes</b></h4>
      </a>
    </div>
    <div id="collapseOne" class="accordion-body collapse">
      <div class="accordion-inner">
        <h4>Paso 1: Ingresar Persona </h4>
        <%= link_to t('.Ingresar', :default => t("helpers.links.ingresar")),
                      new_persona_path, :class => 'btn btn-primary' %>
        <h4>Paso 2: Registrar Paciente </h4>
        <%= link_to t('.Registrar', :default => t("helpers.links.registrar")),
            new_paciente_path,
            :class => 'btn btn-primary' %>   
        <h4>Paso 3: Listar Paciente</h4>
        <%= link_to t('.Listar', :default => t("helpers.links.listar")),
            pacientes_path,
            :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
        <h4><b>Administrar Personal Médico</b></h4>
      </a>
    </div>
    <div id="collapseTwo" class="accordion-body collapse">
      <div class="accordion-inner">
        <h4>Paso 1: Ingresar Persona </h4>
        <%= link_to t('.Ingresar', :default => t("helpers.links.ingresar")),
                      new_persona_path, :class => 'btn btn-primary' %>
        <h4>Paso 2: Registrar Personal Médico </h4>
        <%= link_to t('.Registrar', :default => t("helpers.links.registrar")),
            new_personal_rubro_path,
            :class => 'btn btn-primary' %>   
        <h4>Paso 3: Listar Personal Médico</h4>
        <%= link_to t('.Listar', :default => t("helpers.links.listar")),
            personal_rubros_path,
            :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
  
        <h3><b>Listar Personas</b></h3>
      
          <%- model_class = Persona -%>
          <%= form_tag "/personas", :class => 'form-search', :method => 'get', :id => "personas_search" do %>
              <p>
                <%= text_field_tag :searchpersona, params[:searchpersona],  :class => 'input-medium search-query' %>
                <%= submit_tag "Buscar Persona", :name => nil, :class => 'btn' %>
              </p>
          <% end %>  
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:id) %></th>
                <th><%= model_class.human_attribute_name(:nombresPersona) %></th>
                <th><%= model_class.human_attribute_name(:apellidosPersona) %></th>
                <th><%= model_class.human_attribute_name(:fechaNacimientoPersona) %></th>
                <th><%= model_class.human_attribute_name(:rutPersona) %></th>
                <th><%= model_class.human_attribute_name(:domicilioPersona) %></th>
                <!--<th><%#= model_class.human_attribute_name(:created_at) %></th> -->
                <th><%=t '.actions', :default => t("helpers.actions") %></th>
              </tr>
            </thead>
            <tbody>
              <% @personas.each do |persona| %>
                <tr>
                  <td><%= link_to persona.id, persona_path(persona) %></td>
                  <td><%= persona.nombresPersona %></td>
                  <td><%= persona.apellidosPersona %></td>
                  <td><%= persona.fechaNacimientoPersona %></td>
                  <td><%= persona.rutPersona %></td>
                  <td><%= persona.domicilioPersona %></td>
                  <!--<td><%#= persona.created_at %></td>-->
                  <td>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                edit_persona_path(persona), :class => 'btn btn-mini' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                persona_path(persona),
                                :method => :delete,
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                :class => 'btn btn-mini btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= will_paginate @personas, renderer: BootstrapPagination::Rails %>

          <%= link_to t('.new', :default => t("helpers.links.new")),
                      new_persona_path, :class => 'btn btn-primary', :style => "visibility: hidden;" %>     
      
  </div>
</div>

    
  </div>
</div>