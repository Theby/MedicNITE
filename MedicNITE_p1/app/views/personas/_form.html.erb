<%= form_for @persona, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :rutPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rutPersona, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombresPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombresPersona, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :apellidopaternoPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :apellidopaternoPersona, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :apellidomaternoPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :apellidomaternoPersona, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                personas_path, :class => 'btn' %>
  </div>
<% end %>
