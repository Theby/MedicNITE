<%= form_for @persona, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group" style="visibility: hidden;">
    <%= f.label :idPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :idPersona, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :domicilioPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :domicilioPersona, :class => 'text_field', :autofocus => :true, :required => true , :autocomplete => :false, placeholder: "Calle Falsa 123" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombresPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombresPersona, :class => 'text_field', :required => :true, :autocomplete => :false, placeholder: "Nombre sin apellidos" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :apellidosPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :apellidosPersona, :class => 'text_field', :required => :true, :autocomplete => :false, placeholder: "Uno o dos apellidos"  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fechaNacimientoPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :fechaNacimientoPersona, :class => 'date_select', :start_year => 1900, :end_year => Time.now.year, prompt: { day: 'Día', month: 'Mes', year: 'Año' }, :use_month_names => ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'], :required => :true  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rutPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rutPersona, :class => 'text_field', :required => :true, :autocomplete => :false, placeholder: "42000000-k" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                personas_path, :class => 'btn' %>
  </div>
<% end %>
