<%= form_for @sala, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :idSala, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :idSala, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :idArea, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :idArea, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :codVisibleSala, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :codVisibleSala, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tipoSala, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tipoSala, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estadoSalas, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :estadoSalas, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                salas_path, :class => 'btn' %>
  </div>
<% end %>
