<%- model_class = Sala -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:idSala) %>:</strong></dt>
  <dd><%= @sala.idSala %></dd>
  <dt><strong><%= model_class.human_attribute_name(:idArea) %>:</strong></dt>
  <dd><%= @sala.idArea %></dd>
  <dt><strong><%= model_class.human_attribute_name(:codVisibleSala) %>:</strong></dt>
  <dd><%= @sala.codVisibleSala %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipoSala) %>:</strong></dt>
  <dd><%= @sala.tipoSala %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estadoSalas) %>:</strong></dt>
  <dd><%= @sala.estadoSalas %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              salas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sala_path(@sala), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sala_path(@sala),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
