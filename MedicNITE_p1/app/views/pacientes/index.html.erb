<h1>Listing pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Peridpersona</th>
      <th>Idpersona</th>
      <th>Idtipopaciente</th>
      <th>Idestadopaciente</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.perIdPersona %></td>
        <td><%= paciente.idPersona %></td>
        <td><%= paciente.idTipoPaciente %></td>
        <td><%= paciente.idEstadoPaciente %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

