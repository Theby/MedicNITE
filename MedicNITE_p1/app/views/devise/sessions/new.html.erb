<h2>Ingresar</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <br/><div><%= f.label :email %>
  <%= f.email_field :email, :class => 'email', :autofocus => true, :required => true, :autocomplete => false, placeholder: "ejemplo@ejemplo.ej"%></div>

  <br/><div><%= f.label :password %>
  <%= f.password_field :password, :required => :true, :autocomplete => :false, placeholder: "ContraseÃ±a" %></div>

  <br/><% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me%></div>
  <% end -%>

  <div><%= f.submit "Ingresar", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
