<%= form_for @personal_rubro, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :idPersona, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :idPersona, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :idTipoPersonalRubro, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :idTipoPersonalRubro, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :especialidadPersonalRubro, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :especialidadPersonalRubro, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                personal_rubros_path, :class => 'btn' %>
  </div>
<% end %>
