<%- model_class = PersonalRubro -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:idPersona) %>:</strong></dt>
  <dd><%= @personal_rubro.idPersona %></dd>
  <dt><strong><%= model_class.human_attribute_name(:idTipoPersonalRubro) %>:</strong></dt>
  <dd><%= @personal_rubro.idTipoPersonalRubro %></dd>
  <dt><strong><%= model_class.human_attribute_name(:especialidadPersonalRubro) %>:</strong></dt>
  <dd><%= @personal_rubro.especialidadPersonalRubro %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              personal_rubros_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_personal_rubro_path(@personal_rubro), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              personal_rubro_path(@personal_rubro),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
